<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<DialogPane fx:controller="com.example.dacs4.controllers.JoinMeetingDialogController"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="dialogPane"
            prefWidth="420"
            stylesheets="/css/joinMeetingDialog.css">

    <headerText>
        Tham gia cuộc họp
    </headerText>

    <content>
        <VBox spacing="12">
            <Label text="Nhập mã cuộc họp để tham gia"/>

            <VBox spacing="6">
                <Label text="Mã cuộc họp"/>
                <TextField fx:id="meetingIdField"
                           promptText="VD: MTG-ABC123"
                           onKeyPressed="#onKeyPressed"/>
            </VBox>

            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Button text="Hủy" onAction="#onCancel"/>
                <Button text="Tham gia"
                        fx:id="joinButton"
                        onAction="#onJoin"/>
            </HBox>
        </VBox>
    </content>

</DialogPane>
