<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleButton?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dacs4.controllers.UiController">
    <!-- Các thành phần cơ bản -->
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
    <TextField fx:id="inputField" promptText="Enter text here"/>
    <Label fx:id="labelText" text="This is a label"/>
    <TextArea fx:id="textArea" promptText="Enter some text"/>
    <ToggleButton fx:id="toggleButton" text="Enable/Disable"/>

    <!-- Các thành phần phức tạp -->
    <TableView fx:id="tableView">
        <TableColumn text="Column 1"/>
        <TableColumn text="Column 2"/>
    </TableView>

    <TabPane>
        <Tab text="Tab 1">
            <VBox>
                <Label text="Content of Tab 1"/>
            </VBox>
        </Tab>
        <Tab text="Tab 2">
            <VBox>
                <Label text="Content of Tab 2"/>
            </VBox>
        </Tab>
    </TabPane>
</VBox>
